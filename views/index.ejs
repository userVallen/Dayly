<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Questrial&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/styles/main.css" />
    <title>Dayly</title>
  </head>
  <body>
    <h1 class="p-5">Day<span style="color: #91c8e4">ly</span></h1>

    <form
      class="form-container d-flex flex-column gap-md-5 gap-3 p-4"
      method="POST"
      action="/"
    >
      <div class="d-flex flex-row gap-md-5 gap-3">
        <div class="form-floating">
          <input
            type="number"
            step="any"
            class="form-control"
            id="latitudeInput"
            placeholder=""
            name="latitude"
            required
          />
          <label for="latitudeInput">Latitude</label>
        </div>

        <div class="form-floating">
          <input
            type="number"
            step="any"
            class="form-control"
            id="longitudeInput"
            placeholder=""
            name="longitude"
            required
          />
          <label for="longitudeInput">Longitude</label>
        </div>
      </div>

      <button type="submit" class="btn submit-button btn-animation m-3">
        Submit
      </button>
    </form>

    <% if(locals.weatherCodes) { %>
    <div class="content m-5 gap-4 gap-sm-5">
      <% locals.weatherCodes.map((weather, i) => { %>
      <div class="weather-card gap-3">
        <p class="my-2"><%= locals.times[i] %></p>
        <img
          class="weather-icon"
          src="<%= weather.iconURL %>"
          alt="weather icon"
        />
        <!-- <div class="circle"></div> -->
        <p class="my-2"><%= locals.temps[i] %>Â°</p>
        <p class="my-2"><%= weather.name %></p>
      </div>
      <% }) } %>
    </div>
  </body>
</html>
